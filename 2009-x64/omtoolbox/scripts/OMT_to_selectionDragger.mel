global proc string[] OM_OppVtxOnEdge(string $edge, string $quadVtx)
{

	string 	$token[];
	string	$dump[];
	string 	$return[0];
	string 	$object = `OM_objectName($edge)`;
	int	$int;
	
	$token = `polyInfo -ev $edge`;
