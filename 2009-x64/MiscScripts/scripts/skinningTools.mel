menuItem 
	-collection ST_InfluenceSetsRMIC 
	-l $setName 
	-p ST_InfluenceSetsMenu 
	-c ("ST_SelectSet " + $fullSetName) 
	-radioButton 1 
	($fullSetName + "_MI");

