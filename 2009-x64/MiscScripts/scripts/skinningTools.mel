global proc ST_setDelete(string $skinCluster)
{
//Get highlighted sets.
string $DeleteSet[] = `textScrollList -q -selectItem ST_EditSets_SetsTSL`;

if (! `size $DeleteSet`)
	return;

//Delete set
delete ("skinningToolsSet_" + $skinCluster + "_" + $DeleteSet[0]);
	
